{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles sorted by date, and in descending order by default, additionally can take a topic value and filter article by topic",
    "queries": ["?sort_by=VALUE", "?order=VALUES", "?topic=VALUE"],
    "exampleResponse": {
      "articles": [
        {
          "article_id": 3,
          "title": "Eight pug gifs that remind me of mitch",
          "author": "icellusedkars",
          "topic": "mitch",
          "created_at": "2020-11-03T09:12:00.000Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/158651/news-newsletter-newspaper-information-158651.jpeg?w=700&h=700",
          "comment_count": 2
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves a single article matching the passed in article id, and includes a comment count",
    "queries": ["Int"],
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": "4",
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?w=700&h=700",
          "comment_count": 0
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates the vote count of an article matching the passed in article id",
    "queries": ["Int"],
    "exampleBody": { "inc_votes": "Int" },
    "exampleResponse": {
      "articles": [
        {
          "author": "weegembump",
          "title": "Seafood substitutions are increasing",
          "article_id": "4",
          "body": "Text from the article..",
          "topic": "cooking",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 9,
          "article_img_url": "https://images.pexels.com/photos/1267320/pexels-photo-1267320.jpeg?w=700&h=700"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments matching the passed in article id",
    "queries": ["Int"],
    "exampleResponse": {
      "comments": [
        {
          "comment_id": "3",
          "votes": 0,
          "created_at": "2018-05-30T15:59:13.341Z",
          "author": "weegembump",
          "body": "Text from the article..",
          "article_id": "4"
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "adds a comment to the article matching the passed in article id",
    "exampleBody": { "username": "string", "body": "string" },
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 19,
          "article_id": 3,
          "body": "You shall not parse!",
          "votes": 0,
          "author": "grandalf_the_tired",
          "created_at": "2025-03-11T12:32:44.086Z"
        }
      ]
    }
  },
  "PATCH/api/comments/:comment_id": {
    "description": "updates the vote count of a comment matching the passed in comment_id",
    "queries": ["Int"],
    "exampleBody": { "inc_votes": "Int" },
    "exampleResponse": {
      "comment_id": 19,
      "article_id": 3,
      "body": "You shall not parse!",
      "votes": 1,
      "author": "grandalf_the_tired",
      "created_at": "2025-03-11T12:32:44.086Z"
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "deletes a comment matching the passed in comment id",
    "queries": ["Int"],
    "exampleResponse": {}
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": [
      {
        "username": "stacey-dooly-and-the-lockdown-babies",
        "name": "tony",
        "avatar_url": "https://avatars2.githubusercontent.com/u/24394918?s=400&v=4"
      }
    ]
  },
  "GET /api/users/:username": {
    "description": "serves a single user matching the passed in username",
    "queries": ["string"],
    "exampleResponse": [
      {
        "username": "stacey-dooly-and-the-lockdown-babies",
        "name": "tony",
        "avatar_url": "https://avatars2.githubusercontent.com/u/24394918?s=400&v=4"
      }
    ]
  }
}
